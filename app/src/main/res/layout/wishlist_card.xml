<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:baselineAligned="true">

        <TextView
            android:id="@+id/wishlist_card_name"
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wishlist Name"
            android:textStyle="bold"
            android:textSize="30sp"/>
        <TextView
            android:id="@+id/wishlist_card_number_of_products"
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Number of products: 12"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/wishlist_card_end_date"
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End date: 12/6/2023 "
            android:textSize="18sp"/>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/tertiary"
            app:cardCornerRadius="20dp">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <TextView
                    android:id="@+id/wishlist_card_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:padding="10dp"
                    android:text="@string/product_description_lorem"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </ScrollView>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.cardview.widget.CardView>