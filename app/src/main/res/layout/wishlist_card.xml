<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/wishlist_card_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Wishlist Name"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/wishlist_card_number_of_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Number of products: 12"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/wishlist_card_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="End date: 12/6/2023 "
            android:textSize="18sp" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/tertiary"
            app:cardCornerRadius="20dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <TextView
                    android:id="@+id/wishlist_card_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:padding="10dp"
                    android:text="@string/product_description_lorem"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </ScrollView>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/wishlist_card_delete_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_button"
            android:textColor="@color/white"
            app:backgroundTint="@android:color/holo_red_dark"
            android:text="@string/delete_wishlist"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>